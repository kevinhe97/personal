    .replace(new RegExp('\\\\?\\((' + tag + '(\\s+(".+?"|.+?))?)\\\\?\\)', 'g'), function(match, group){
      if(match.substr(0,1) === '\\') {
        return '('+ group + ')'; // Rewrite \(tag "..."|...\) to (tag "..."|...)
      }
      return '{'+ group + '}'; // Rewrite (tag "..."|...) to {tag "..."|...}
    });
